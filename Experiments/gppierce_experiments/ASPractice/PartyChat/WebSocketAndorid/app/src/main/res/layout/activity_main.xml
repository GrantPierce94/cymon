<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <!-- Username Input -->
    <EditText
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:hint="username"
        android:textSize="20sp"
        android:id="@+id/et1" />

    <!-- Room selection dropdown -->
    <Spinner
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/spinner_room" />

    <!-- Messages for Room 1 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tx_room1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Room 1 Conversation:\n"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </ScrollView>

    <!-- Messages for Room 2 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tx_room2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Room 2 Conversation:\n"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </ScrollView>

    <!-- Messages for Room 3 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tx_room3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Room 3 Conversation:\n"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </ScrollView>

    <!-- Messages for Room 4 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tx_room4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Room 4 Conversation:\n"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </ScrollView>

    <!-- Connect Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/bt1" />

    <!-- Send Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/bt2" />
</androidx.appcompat.widget.LinearLayoutCompat>


