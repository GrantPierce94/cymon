<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_option_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainMenuFragment">


    <TextView
        android:id="@+id/title_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#751A1A"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/main_menu_title"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@id/fragment_option_menu"
        app:layout_constraintStart_toStartOf="@id/fragment_option_menu"
        app:layout_constraintTop_toTopOf="@id/fragment_option_menu" />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:id="@+id/linear_authors2"
        app:layout_constraintTop_toBottomOf="@id/title_textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/wild_pokemon_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#000000"
                android:text="@string/mainMenubtn1" />

            <Button
                android:id="@+id/trainer_battle_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#000000"
                android:text="@string/mainMenubtn2" />

            <Button
                android:id="@+id/pokeCenter_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#000000"
                android:layout_marginRight="20dp"
                android:text="@string/mainMenubtn3" />

            <Button
                android:id="@+id/changeTeam_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.9"
                android:backgroundTint="#000000"
                android:text="@string/mainMenubtn4" />

            <Button
                android:id="@+id/btnMultiplayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.9"
                android:backgroundTint="#000000"
                android:text="Multiplayer" />

        </LinearLayout>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#494949"
            android:text="@string/save_button"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#494949"
            android:text="Main Menu"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>